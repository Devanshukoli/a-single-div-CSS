/*-----------------------------

Shadow

-----------------------------*/

#shadow
  background-color: #333
  border-top: 2px solid black

  div
    width: 400px
    height: 300px
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-repeat: no-repeat
    background-image: radial-gradient(circle, white(.6) 25%, alpha(#333,0) 60%)
    background-position: 50% 40%
    background-size: 13em 13em

    &::before,
    &::after
      width: 100%
      height: 100%
      display: grid
      place-content: center
      content: 'SHADOW'
      font-family: Helvetica, sans-serif
      font-weight: bold
      font-size: 4em
      background-repeat: no-repeat
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;

    &::before
      margin-top: 10px
      background-image: radial-gradient(circle, black 30%, black(0) 47%),
                        linear-gradient(#282828, #282828)
      background-position: 50% 50%
      background-size: 3em 3em,
                       100% 100%
      filter: blur(.07em)

    &::after
      background-image: linear-gradient(to top, black(.4) 37%, black(0) 46%),
                        radial-gradient(circle, white 45%, white(0) 60%),
                        linear-gradient(#3d3d3d, #3d3d3d)
      background-position: 50% 50%
      background-size: 100% 100%,
                       3em 3em,
                       100% 100%
