#brew
  background-color: darkolivegreen

  div
    width: 300px
    height: 300px
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background: radial-gradient(ellipse at 50% 90%, gold 20%,alpha(gold,0) 20.5%)      42% 98% / 1.2em 2em,
                radial-gradient(ellipse at 50% 65%, tomato 50%, alpha(tomato,0) 50.5%) 42% 98% / 1.2em 2em,
                radial-gradient(ellipse at 50% 90%, gold 20%, alpha(gold,0) 20.5%)     50% 98% / 1.2em 2em,
                radial-gradient(ellipse at 50% 65%, tomato 50%, alpha(tomato,0) 50.5%) 50% 98% / 1.2em 2em,
                radial-gradient(ellipse at 50% 90%, gold 20%, alpha(gold,0) 20.5%)     58% 98% / 1.2em 2em,
                radial-gradient(ellipse at 50% 65%, tomato 50%, alpha(tomato,0) 50.5%) 58% 98% / 1.2em 2em,
                linear-gradient(saddlebrown, saddlebrown) 50% 100% / 5em .5em,
                radial-gradient(circle at 50% 10%, #333 40%, alpha(#333,0) 40.5%) 50% 110% / 100% 50%,
                radial-gradient(circle at 50% 20%, #222 50%, alpha(#222,0) 50.5%) 50% 110% / 100% 50%,
                linear-gradient(110deg, alpha(#222,0) 40%,
                                       #222 40.5%,
                                       #222 70%,
                                       alpha(#222,0) 70.5%) 30% 100% / 2em 3em,
                linear-gradient(135deg, #222 65%,
                                        alpha(#222,0) 65.5%) 35% 100% / 2em 3em,
                linear-gradient(-110deg, alpha(#222,0) 40%,
                                         #222 40.5%,
                                         #222 70%,
                                         alpha(#222,0) 70.5%) 70% 100% / 2em 3em,
                linear-gradient(-135deg, #222 65%,
                                         alpha(#222,0) 65.5%) 65% 100% / 2em 3em,
                radial-gradient(circle, white 50%, white(0) 50.5%) 72.5% 36% / 1.4em 1.4em,
                radial-gradient(circle, white 50%, white(0) 50.5%) 77.5% 37.5% / 1.4em 1.4em,
                linear-gradient(110deg, white(0) 30%,
                                       white 30.5%,
                                       white 55%,
                                       white(0) 55.5%) 75% 42% / 2em 1.5em,
                radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 50.5%) 75% 49% / 4em 4em,
                radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 50.5%) 61% 48% / 3em 3em,
                radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 50.5%) 50% 50% / 3em 3em,
