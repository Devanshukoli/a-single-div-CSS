                radial-gradient(circle, alpha(limegreen,0) 40%,
                                        limegreen 40.5%,
                                        limegreen 45%,
                                        alpha(limegreen,0) 45.5%) 50% 10% / 2em 2em,
                radial-gradient(circle, limegreen 45%,
                                        alpha(limegreen,0) 45.5%) 42% 25% / 2em 2em,
                radial-gradient(circle, limegreen 45%,
                                        alpha(limegreen,0) 45.5%) 70% 0 / 1em 1em,
                radial-gradient(circle, limegreen 45%,
                                        alpha(limegreen,0) 45.5%) 62% 35% / 1em 1em,
                radial-gradient(circle, alpha(limegreen,0) 40%,
                                        limegreen 40.5%,
                                        limegreen 49%,
                                        alpha(limegreen,0) 49.5%) 66% 29% / 1em 1em,
                radial-gradient(circle, alpha(limegreen,.3) 45%,
