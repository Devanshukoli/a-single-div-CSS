/*-----------------------------

Stripes

-----------------------------*/

#stripes
  background-color: darkorchid
  z-index: 0

  div
    width: 200px
    height: 250px
    margin-left: -(@width/2 + 15px)
    margin-top: -(@height/2 + 10px)
    background: radial-gradient(circle, gold 15%, alpha(gold,0) 55.5%) 60% 43% / 3em 3em,
                radial-gradient(ellipse at 50% 0, white(.3) 55%,
                                                  white(.6) 55.5%,
                                                  white(.6) 59%,
                                                  white(0) 59.5%) 0 50% / 125px 35px,
                radial-gradient(circle, gold 30%, alpha(gold,0) 45.5%) 60% 48% / 5em 5em,
                linear-gradient(45deg, alpha(#222,0) 40%,
                                       #222 41%,
                                       #222 60%,
                                       alpha(#222,0) 61%) 70% 55% / 1.5em 1.5em,
                radial-gradient(ellipse at 80% 100%, #222 50%, alpha(#222,0) 51%) 88% 58% / 3em .5em,
                radial-gradient(ellipse at 0 50%, #222 50%, alpha(#222,0) 51%) 94.5% 64.5% / .5em 2em,
                linear-gradient(45deg, alpha(#222,0) 40%,
                                       #222 41%,
                                       #222 60%,
                                       alpha(#222,0) 61%) 63% 60% / 1.5em 1.5em,
                radial-gradient(ellipse at 80% 100%, #222 60%, alpha(#222,0) 61%) 81% 62.6% / 2.5em .5em,
                radial-gradient(ellipse at 0 50%, #222 50%, alpha(#222,0) 51%) 88% 69.5% / .5em 2em,
                radial-gradient(circle, gold 40%, alpha(gold,0) 60.5%) 60% 48% / 5em 5em,
                radial-gradient(ellipse at 100% 50%, white(.3) 55%,
                                                     white(.6) 55.5%,
                                                     white(.6) 59%,
                                                     white(0) 59.5%) 50% 0 / 35px 125px,
                linear-gradient(140deg, #222 88%, alpha(#222,0) 88.5%) 94% 35% / 2em .25em,
                linear-gradient(-82deg, #222 50%, alpha(#222,0) 52%) 94.5% 40% / .4em 2em,
                linear-gradient(140deg, #222 88%, alpha(#222,0) 89%) 90% 38% / 2em .25em,
                linear-gradient(-82deg, #222 50%, alpha(#222,0) 52%) 90.5% 43% / .4em 2em,
                linear-gradient(45deg, alpha(#222,0) 40%,
                                       #222 41%,
                                       #222 60%,
                                       alpha(#222,0) 61%) 70% 50% / 1.5em 1.5em,
                radial-gradient(ellipse at 80% 100%, #222 50%, alpha(#222,0) 51%) 85% 53.6% / 2.5em .4em,
                radial-gradient(ellipse at 0 50%, #222 40%, alpha(#222,0) 41%) 91.5% 59% / .5em 2em,
                linear-gradient(60deg, alpha(#222,0) 30%,
                                       #222 31%,
                                       #222 50%,
                                       alpha(#222,0) 51%) 60.5% 72.5% / 1.5em 1.5em,
                linear-gradient(96deg, alpha(#222,0) 40%, #222 43%) 61.5% 86% / .5em 2em,
                radial-gradient(ellipse at 0 50%, #222 50%, alpha(#222,0) 51%) 65% 98% / .5em 2em
    background-repeat: no-repeat

    &::before
      width: 28%
      height: 36%
      bottom: 6px
      left: 30%
      background: repeating-linear-gradient(to top, #222, #222 .55em,
                                                          gold .55em,
                                                          gold 1.02em) 0 0 / 100% 100%
      border-bottom-left-radius: 3.5em
      border-top-left-radius: 1.2em
      border-top-right-radius: .4em
      box-shadow: 0 0 2em gold,
                  inset -1em 0 0 black(.2)
      z-index: -1

    &::after
      width: 35px
      height: @width
      right: 15%
      top: 31%
      background: radial-gradient(circle, white 50%, white(0) 50.5%) 60% 40% / .3em .3em,
                  radial-gradient(circle, #111 50%, black(0) 51%) 0 0 / 1.8em 1.8em,
                  radial-gradient(circle, gold 40%, alpha(gold,0) 70%) 0 0 / 2em 2em
      background-repeat: no-repeat
      background-color: #222
      border-radius: 2em
      border-bottom-right-radius: 0
      box-shadow: 0 0 1.2em .1em gold
      transform: rotate(20deg)
